 # This file is the init-exec-scripts recipe.
 #

-SUMMARY = "Simple init-exec-scripts application"
+SUMMARY = "Execute scripts in root folder during boot"
 SECTION = "PETALINUX/apps"
 LICENSE = "MIT"
