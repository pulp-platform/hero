@@ -12,7 +12,14 @@

 S = "${WORKDIR}"

+FILESEXTRAPATHS_prepend := "${THISDIR}/files:"
+
+inherit update-rc.d
+
+INITSCRIPT_NAME = "init-exec-scripts"
+INITSCRIPT_PARAMS = "start 96 S ."
 do_install() {
-	     install -d ${D}/${bindir}
-	     install -m 0755 ${S}/init-exec-scripts ${D}/${bindir}
+	     install -d ${D}${sysconfdir}/init.d
+	     install -m 0755 ${S}/init-exec-scripts ${D}${sysconfdir}/init.d/init-exec-scripts
 }
+FILES_${PN} += "${sysconfdir}/*"
